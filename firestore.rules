rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the requesting user is the owner of a document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can read their own profile
      allow read: if isOwner(userId);

      // A new user can create their own profile document
      // We check if the incoming data has the correct ID
      allow create: if isOwner(userId) && request.resource.data.id == userId;

      // A user can update their own profile
      allow update: if isOwner(userId);
      
      // A user cannot delete their profile
      allow delete: if false;
    }

    // Rules for the 'tenants' collection
    match /tenants/{tenantId} {
      // A user can read the tenant document if their profile's tenantId matches
      allow read: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;

      // A user can create a new tenant if they are signed in and they are the owner
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;

      // Only the owner of a tenant can update it
      allow update: if isSignedIn() && get(/databases/$(database)/documents/tenants/$(tenantId)).data.ownerId == request.auth.uid;
      
      // A tenant document cannot be deleted from the client
      allow delete: if false;

      // Devices collection (per tenant)
      match /devices/{deviceId} {
        // Allow read if user belongs to the tenant
        allow read, list: if isSignedIn()
          && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;

        // Allow create if user is the tenant owner
        allow create: if isSignedIn()
          && get(/databases/$(database)/documents/tenants/$(tenantId)).data.ownerId == request.auth.uid;

        // Allow update if user is the tenant owner
        allow update: if isSignedIn()
          && get(/databases/$(database)/documents/tenants/$(tenantId)).data.ownerId == request.auth.uid;

        // Prevent delete from client
        allow delete: if false;

        // Rules for threat alerts on a device
        match /alerts/{alertId} {
          allow read, list: if isSignedIn() &&
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;

          // Allow agents/backend to create alerts
          allow create: if isSignedIn();
        }
      }

      // Rules for audit logs in a tenant
      match /auditLogs/{logId} {
        // Tenant members can read audit logs for their own tenant
        allow read, list: if isSignedIn()
          && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;

        // Tenant members can create audit logs for actions they perform
        allow create: if isSignedIn()
          && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId
          && request.resource.data.userId == request.auth.uid;
      }

      // Rules for enrollment tokens
      match /enrollmentTokens/{tokenId} {
        // Only the tenant owner can create an enrollment token
        allow create: if isSignedIn() &&
          get(/databases/$(database)/documents/tenants/$(tenantId)).data.ownerId == request.auth.uid;
        
        // Tokens are write-once and cannot be read or updated from the client
        allow read, update, delete: if false;
      }
    }
  }
}
